<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/pager_product"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="?attr/actionBarSize"
        />
    <TextView
        android:id="@+id/tv_product_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pager_product"
        android:text="tv_product_title"/>
    <TextView
        android:id="@+id/tv_product_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_product_title"
        android:text="tv_product_available"/>
    <TextView
        android:id="@+id/tv_product_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_product_available"
        android:text="tv_product_size"/>
    <Button
        android:id="@+id/btn_product_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_add_to_chart"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>